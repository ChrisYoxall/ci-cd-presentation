{
    "name": "simple-react-api-app",
    "version": "1.0.0",
    "description": "A simple React application to use in a demo",
    "main": "src/index.tsx",
    "scripts": {
        "start": "vite --host",
        "build": "tsc && vite build",
        "serve": "vite preview --host",
        "lint": "eslint \"src/**/*.{ts,tsx,mjs,json}\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "axios": "^1.8.4",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.13.11",
        "@types/react": "^19.0.12",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.22.0",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "jsdom": "^26.0.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0",
        "vite": "^6.2.2",
        "vitest": "^3.0.9"
    },
    "volta": {
        "node": "22.14.0",
        "pnpm": "10.6.5"
    }
}
